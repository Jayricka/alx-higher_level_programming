#!/bin/bash

# Check if the PYFILE environment variable is set
if [ -z "$PYFILE" ]; then
  echo "Please set the PYFILE environment variable to the name of the Python file."
  exit 1
fi

# Check if the specified Python file exists
if [ ! -f "$PYFILE" ]; then
  echo "The specified Python file '$PYFILE' does not exist."
  exit 1
fi

# Run the Python script
python3 "$PYFILE"

